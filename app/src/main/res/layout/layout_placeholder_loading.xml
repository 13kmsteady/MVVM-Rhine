<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import
            alias="utils"
            type="com.qingmei2.sample.common.loadings.LoadingController" />

        <variable
            name="viewModel"
            type="com.qingmei2.sample.common.loadings.CommonLoadingViewModel" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/statusLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/statusLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bind_visibility="@{ utils.applyLoadingState(viewModel.loadingState()) }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/statusEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bind_visibility="@{ utils.applyEmptyState(viewModel.loadingState()) }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="空空如也" />

        <TextView
            android:id="@+id/statusError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bind_visibility="@{ utils.applyErrorState(viewModel.loadingState()) }"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="加载错误，点击重新尝试" />
    </android.support.constraint.ConstraintLayout>

</layout>